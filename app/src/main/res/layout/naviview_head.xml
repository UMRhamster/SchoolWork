<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#7D6363">

    <ImageView
        android:id="@+id/drawer_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/iconpeoople"/>

    <TextView
        android:id="@+id/drawer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_below="@id/drawer_image"
        android:text="ID:XXXXXXX"/>
    <TextView
        android:id="@+id/drawer_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:layout_below="@id/drawer_id"
        android:text="此人很懒~什么都没留下~"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_below="@id/drawer_word"/>


</RelativeLayout>